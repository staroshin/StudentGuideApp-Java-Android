<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#92A0AD">

    <ImageView

        android:id="@+id/img6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/b"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="Registration"
        android:textColor="@color/white"
        android:textSize="30dp"

        android:textStyle="bold" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_weight="1"
        android:layout_below="@id/img6">

        <TextView
            android:id="@+id/full_name"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:gravity="left"
            android:paddingTop="10dp"
            android:paddingBottom="8dp"
            android:text="Full Name : "
            android:textColor="@color/white"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_below="@id/e_full_name"
            android:layout_marginLeft="20dp"
            android:gravity="left"
            android:paddingTop="10dp"
            android:paddingBottom="8dp"
            android:text="Username : "
            android:textColor="@color/white"
            android:textSize="22dp" />

        <EditText
            android:id="@+id/e_full_name"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_toRightOf="@id/full_name"
            android:gravity="center" />

        <EditText
            android:id="@+id/e_name"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_toRightOf="@id/name"
            android:layout_below="@id/e_full_name"
            android:gravity="center" />

        <TextView
            android:id="@+id/pw"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_below="@id/name"
            android:layout_marginLeft="20dp"
            android:gravity="left"
            android:paddingTop="10dp"
            android:paddingBottom="8dp"
            android:text="Password : "
            android:textColor="@color/white"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/r_pw"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_below="@id/pw"
            android:layout_marginLeft="20dp"
            android:gravity="left"
            android:paddingTop="10dp"
            android:paddingBottom="8dp"
            android:text="Confirm Password :"
            android:textColor="@color/white"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_below="@id/r_pw"
            android:layout_marginLeft="20dp"
            android:gravity="left"
            android:paddingTop="10dp"
            android:paddingBottom="8dp"
            android:text="Phone : "
            android:textColor="@color/white"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/teach_id"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_below="@id/phone"
            android:layout_marginLeft="20dp"
            android:gravity="left"
            android:paddingTop="10dp"
            android:paddingBottom="8dp"
            android:text="ID : "
            android:textColor="@color/white"
            android:textSize="22dp" />

        <EditText
            android:id="@+id/e_pw"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_below="@id/e_name"
            android:layout_toRightOf="@id/pw"
            android:gravity="center"
            android:inputType="textPassword"/>

        <EditText
            android:id="@+id/e_r_pw"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_below="@id/pw"
            android:layout_toRightOf="@id/pw"
            android:gravity="center"
            android:inputType="textPassword"/>

        <EditText
            android:id="@+id/e_phone"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_below="@id/e_r_pw"
            android:layout_toRightOf="@id/pw"
            android:gravity="center" />

        <EditText
            android:id="@+id/e_t_id"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_below="@id/e_phone"
            android:layout_toRightOf="@id/pw"
            android:gravity="center" />


        <Button
            android:id="@+id/crt"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_below="@id/e_t_id"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/white"

            android:text="Create"
            android:textColor="#92A0AD"
            android:textSize="22dp">

        </Button>

    </RelativeLayout>

</RelativeLayout>